@model ErrorLoggerModel.UserModel

@{
    ViewBag.Title = "DeleteUser";
}

<h2 class="title-head">Delete User</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" style="background: #EF5350; color: #fff;"/> 
            <button class="btn btn-primary" type="button">
                @Html.ActionLink("Cancel", "ViewUsers")
            </button> 
        </div>
    }
</div>
